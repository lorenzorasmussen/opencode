# Snyk Configuration
# Generated by /security command

# Language settings
language-settings:
  javascript:
    ignoreUnknownCA: false
  python:
    ignoreUnknownCA: false

# Exclusions
exclude:
  global:
    - node_modules/**
    - dist/**
    - build/**
    - coverage/**
    - .venv/**
    - venv/**

# Severity threshold
severity-threshold: medium

# Fail on severity
failOn: upgradable
