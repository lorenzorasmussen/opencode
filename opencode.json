{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "weather": {
      "type": "local",
      "command": ["opencode", "x", "@h1deya/mcp-server-weather"]
    }
  },
  "experimental": {
    "hook": {
      "file_edited": {
        ".json": [
          {
            "command": ["bun", "run", "prettier", "$FILE"]
          }
        ]
      },
      "session_completed": [
        {
          "command": ["touch", "./node_modules/foo"]
        }
      ]
    }
  }
}
