  "formatter": {
    "prettier": {
      "disabled": false,
      "command": ["prettier", "--write"],
      "environment": {},
      "extensions": [".js", ".ts", ".jsx", ".tsx", ".json", ".md", ".css", ".html"]
    },
    "black": {
      "disabled": false,
      "command": ["black"],
      "environment": {},
      "extensions": [".py"]
    },
    "rustfmt": {
      "disabled": false,
      "command": ["rustfmt"],
      "environment": {},
      "extensions": [".rs"]
    }
  },

  "lsp": {
    "typescript": {
      "command": ["typescript-language-server", "--stdio"],
      "extensions": [".ts", ".tsx", ".js", ".jsx"],
      "disabled": false,
      "env": {},
      "initialization": {}
    },
    "python": {
      "command": ["pyright-langserver", "--stdio"],
      "extensions": [".py"],
      "disabled": false,
      "env": {},
      "initialization": {}
    },
    "rust": {
      "command": ["rust-analyzer"],
      "extensions": [".rs"],
      "disabled": false,
      "env": {},
      "initialization": {}
    }
  },

